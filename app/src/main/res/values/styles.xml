<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for horizontal orange lines-->
    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:background">@color/orange</item>
    </style>

    <!--Style for vertical orange lines-->
    <style name="verticalLine">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:background">@color/orange</item>
    </style>

    <!--Style for "Question" before number-->
    <style name="questionInGray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:layout_marginTop">@dimen/dp_32</item>
        <item name="android:text">@string/question</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Style for question number-->
    <style name="questionNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_32</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/sp_34</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Style for each actual question-->
    <style name="actualQuestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--Style for each image-->
    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_200</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <!--Style for the radiobox and checkbox answers-->
    <style name="answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Style for free text answers-->
    <style name="freeAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_32</item>
        <item name="android:hint">@string/enter_your_answer_here</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>
